<html>
<head>
    <title></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <link rel="stylesheet" href="/stylesheets/button.css"/>
    <link rel="stylesheet" href="/stylesheets/clicktoshow.css"/>

</head>
<body>
<!--Navigation bar -->
<nav class="navbar navbar-dark navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Church Center</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="calendar">Calendar</a></li>
        </ul>
    </div>
</nav>
<!--Navigation bar -->
<br/><br/>
<p>
    {{errors}}
</p>
<div class="container">
    <div class="page-header">
        <h1>Event</h1>
    </div>
    <form method="post" role="form" action="createevent" id="createevent" class="login-form form-horizontal">
        <div class="form-group">
            <label class="col-sm-4">Title</label>
            <div class="col-sm-8">
                <input placeholder="" required="required" name="title" type="text"
                       class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">Date</label>
            <div class="col-sm-8">
                <input placeholder="" required="required" name="eventdate" type="date"
                       class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4">Time</label>
            <div class="col-sm-8">
                <input placeholder="9:99" required="required" name="time" type="time"
                       class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4">Grade range between</label>
            <div class="col-sm-2">
                <input placeholder="" name="gradeLow" required="required" type="number"
                    class="form-control"/>
            </div>
            <div class="col-sm-1">and</div>
            <div class="col-sm-2">
            <input placeholder="" name="gradeHigh" required="required" type="number"
                   class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4">Class limit</label>
            <div class="col-sm-8">
                <input placeholder="" name="limit" required="required" type="number"
                       class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4">Details</label>
            <div class="col-sm-8">
                <textarea rows="4" cols="50" name="info" required="required" form="createevent"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" id="createevent" class="login btn btn-primary">Create Event</button>
            </div>
        </div>
    </form>

</div>
</body>
</html>